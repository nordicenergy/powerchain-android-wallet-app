<widget id="de.corrently.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nordic Energy</name>
    <description>
    </description>
    <author email="info@nordicenergy.co" href="https://ictsystems.net">
        Nordic Energy &amp; ICT-Solutions Inc.
    </author>
    <content src="splashscreen.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon density="mdpi" height="57" platform="android" src="www/imgs/logo.png" width="57" />
</widget>
